<h1>Login</h1>


<%= form_tag login_path do %>
    <div class="field">
        <%= label_tag :email, "Email" %> <br>
        <%= text_field_tag :email, params[:email] %>
    </div>
    
    <div class="field">
        <%= label_tag :password, "Password" %> <br>
        <%= password_field_tag :password, params[:password] %>
    </div>
    
    <br>
    
    <div class="actions">
        <%= submit_tag "Log In" %>
    </div>
    
<% end %>






