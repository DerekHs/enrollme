<div id = "suggestion">
  <h3>Team id:</h3>
  <%= @suggested_team.id %>
  <%= link_to "Next", next_rec_path, :class => "btn btn-primary", id: "next" %>


  <h2>Recommended for you!</h2>
  <div id="myCarousel" class="carousel slide " data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
        <div class = "container">
        <div class = "row row-centered">
          <% enumeration = @suggested_team.users.count %>
          <% while enumeration > 0 %>
            <div class = "col-sm-2 col-centered" >
            <%= image_tag @users_pic_arr.pop(), class: "img-responsive img-rounded"  %>
            <h5 class = "text-center" style = color:black;><%= @users_name_arr.pop() %></h5>
            </div>
            <% enumeration -= 1 %>
          <% end %>
        </div>
        </div>
        <!--<div class="carousel-caption">-->
        <div id="matchDescribtion">
        <div class ="container">
          <div class = "row equal">

            <div class = "col-sm-4 leftBlock">
      <button type="button" class="btn btn-success btn-xs" id="team_skillss">Ruby On Rails</button><br>
      <button type="button" class="btn btn-info btn-xs" id="team_skillss">Ui Design</button><br>
      <button type="button" class="btn btn-warning btn-xs" id="team_skillss">Frontend</button><br>
      <button type="button" class="btn btn-primary btn-xs" id="team_skillss">Other Backend</button><br>
      <button type="button" class="btn btn-danger btn-xs" id="team_skillss">Team Management</button>
            </div>
                      
              <div class = "col-sm-8 rightBlock">
            <h3>Matching Rate:</h3>
                  <input id="input-3" name="input-3" value="4" class="rating-loading">
                <h5>This awesome student has a good match with your Available Days!!!!</h5>
                <p><a class="btn btn-sm btn-primary" href="<%= team_profile_path(@suggested_team.id) %>">View Team</a>
                <a class="btn btn-sm btn-primary" href="#">EnrollMe</a></p>
              </div>
              </div>
      </div>
          </div>
      </div>

      <div class="item">
        <img src="chicago.jpg" alt="Chicago" style="width:100%;">
        <div class="carousel-caption">
          <h3>Chicago</h3>
          <p>Thank you, Chicago!</p>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" style="width: 5%" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" style="width: 5%" href="next_rec" data-slide="next" id = "next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>