<div id = "suggestion">
  <h3>Team id:</h3>
  <%= @suggested_team.id %>
  <%= link_to "Next", next_rec_path, :class => "btn btn-primary", id: "next" %>


  <h2>Recommended for you!</h2>
  <div id="myCarousel" class="carousel slide " data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= render partial: "team/pane", :object => @suggested_team %>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" style="width: 5%" href="prev_rec" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" style="width: 5%" href="next_rec" data-slide="next" id = "next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>