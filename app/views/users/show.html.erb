<body>
  <title>Student Information</title>
    <div class="container">
      <div class = "row">
        <div class = "col-sm-4">
  
        <h1>Student Information</h1>
        <h4><span class="info_category">Name:&nbsp;</span><strong><%= @user.name %> </strong></h4>
        <%= image_tag @user.avatar.url(:medium) , :class=>"img-rounded img-responsive"%>
        <h4><span class="info_category"><i class="fa fa-envelope fa-2x" aria-hidden="true"></i>&nbsp;</span><a href="mailto:<%= @user.email %>"><%= @user.email %></a> </h4>
        <hr class="custom_hr">
        <h4><span class="info_category">SID:&nbsp;</span><%= @user.sid %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Major:&nbsp;</span><%= @user.major %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">On Waitlist?&nbsp;</span><%= @user.waitlisted ? "Yes" : "No" %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Team ID:&nbsp;</span><%= link_to @user.team_id, team_profile_path(@user.team_id) %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Bio:&nbsp;</span><%= @user.bio.nil? ? "None" : @user.bio %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Time Commitment:&nbsp;</span><%= @user.time_commitment.nil? ? "None" : @user.time_commitment %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Available Days:&nbsp;</span><%= @availableDays %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Experience:&nbsp;</span><%= @user.experience.nil? ? "None" : @user.experience %></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Skills:&nbsp;</span><%= @skills%></h4>
        <hr class="custom_hr">
        <h4><span class="info_category"><i class="fa fa-facebook-square fa-2x" aria-hidden="true" ></i>&nbsp;</span><a href="<%= @user.facebook %>" target = "_block"><%= @user.facebook %></a></h4>
        <hr class="custom_hr">
        <h4><span class="info_category"><i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i>&nbsp;</span><a href="<%= @user.linkedin %>" target = "_block"><%= @user.linkedin %></a></h4>
        <hr class="custom_hr">
        <h4><span class="info_category">Resume:&nbsp;</span><%= link_to "#{@user.document_file_name}", @user.document.url ,:target => "_block" %></h4>
        <br>
        <%= link_to "Back", '#', onclick: "history.back()", class: 'btn btn-primary' %>
        <%= link_to "Edit", edit_user_path(params[:id]), {class: 'btn btn-primary', :method => 'get'} %>
    </div>
    <div class="col-sm-8">
      <br>
            <br>
      <br>

    <embed width="100%" height="100%" src="<%= @user.document.url%>" type="application/pdf"></embed>
        </div>
        </div>
    </div>
</body>
