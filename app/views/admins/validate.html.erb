<html>
<body>
  <title>Validate</title>
    <div class="container">
        <div class = "text-center">
            <h1>Validate</h1>
            
            <%= form_tag '/admins/new', {method: 'get', class: "form-horizontal"} do %>
                
                <div class="field form-group">
                    <%= label_tag :passcode %> <br>
                    <%= text_field_tag :passcode %>
                </div>
                
                <br>
                
                <div class="actions">
                    <%= submit_tag "Enter Passcode", class: "btn btn-primary" %>
                </div>

            <% end %>
        </div>
    </div>

</body>
</html>